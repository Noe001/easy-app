<style>
  body {
    margin: 0;
    font-family: 'Arial', sans-serif;
  }
  .sidebar {
    height: 100vh;
    width: 240px;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #fff;
    box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    overflow-y: auto;
  }
  .sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .sidebar ul li {
    padding: 10px 20px;
    border-bottom: 1px solid #ddd;
  }
  .sidebar ul li:hover {
    background-color: #f9f9f9;
  }
  .sidebar ul li a {
    text-decoration: none;
    color: #333;
    display: block;
  }
  .content {
    margin-left: 240px;
    padding: 20px;
  }
</style>
</head>
<body>

<div class="sidebar">
  <ul>
    <li><a href="#">ホーム</a></li>
    <li><a href="#">トレンド</a></li>
    <li><a href="#">登録チャンネル</a></li>
    <!-- その他のリンク -->
  </ul>
</div>

<div class="content">
  <%= form_with model: @memo_new, local: true, method: :post do |f| %>
    <%= f.text_field :title, placeholder: "タイトル", class: "" %>
    <%= f.text_area :description, placeholder: "本文", class: "" %>
    <%= f.submit "作成", class: "" %>
  <% end %>

  <% @memos.reverse.each do |memo| %>
    <%= form_with model: memo, url: memo_path(memo.id), local: true, method: :patch do |f| %>
      <%= f.text_field :title, placeholder: "タイトル", class: "" %>
      <%= f.text_area :description, placeholder: "本文", class: "" %>
      <%= f.submit "更新", class: "" %>
    <% end %>
    <%= button_to "削除", memo_path(memo.id), method: :delete, class: "" %>
  <% end %>
</div>