<!-- views/layouts/_notice.html.erb -->

<%# フラッシュメッセージを表示 %>
<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<%# エラーメッセージを表示 %>
<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>
